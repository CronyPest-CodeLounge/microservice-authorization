<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- TABLES -->

    <changeSet id="change-table-account" author="Mikhail Chechetkin">
        <dropNotNullConstraint tableName="account" columnName="phone"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="city"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="country"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="status_code"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="reg_date"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="birth_date"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="message_permission"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="last_online_time"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="is_online"></dropNotNullConstraint>
        <dropNotNullConstraint tableName="account" columnName="is_blocked"></dropNotNullConstraint>
    </changeSet>

    <changeSet id="change_user_email_constraints" author="Mikhail Chechetkin">
        <addUniqueConstraint tableName="user" columnNames="email"/>
    </changeSet>
    <!-- END TABLES -->

    <!-- INDEXES -->
    <!-- END INDEXES -->

    <!-- FOREIGN KEYS -->
    <!-- END FOREIGN KEYS -->

